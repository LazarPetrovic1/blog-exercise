<% include partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header"><%= blog.title %></div>
  <div class="ui top attached">
    <div class="item">
      <img class="ui centered rounded image" src="<%= blog.image %>" alt="Image">
      <div class="content">
        <span>Created on:&nbsp; <%= blog.created.toDateString() %></span>
      </div>
      <div class="description">
        <p><%- blog.body %></p>
      </div>
      <a class="ui orange big inverted button" href="/blogs/<%= blog._id %>/edit">Edit the blog</a>
      <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
        <button class="ui red big inverted button" type="submit">Delete post</button>
      </form>
    </div>
  </div>
</div>

<% include partials/footer %>
